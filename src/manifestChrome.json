{

  "manifest_version": 3,
  "name": "Never Again",
  "version": "1.3",

  "description": "Reminds you who the climate criminals are, starting with Siemens.",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["neverAgain.js"],
      "css": ["neverAgain.css"]
    }
  ]

}
